@model IEnumerable<ProjectsVM>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <a asp-controller="Project" asp-action="InsertProject" class="btn btn-primary mb-1">Create a new project</a>
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card" style="max-width: 18rem;">
                    <img src="@item.ImageURL" class="card-img-top" alt="Project Image" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@item.ProjectName</h5>
                        <p class="card-text">@item.InsertTime.ToShortDateString()</p>
                        <a asp-controller="Project" asp-action="ProjectDetails" asp-route-id="@item.Id" class="btn btn-outline-warning">Details</a>
                        <a asp-controller="Project" asp-action="UpdateProject" asp-route-id="@item.Id" class="btn btn-outline-success">Update</a>
                        <a asp-controller="Project" asp-action="RemoveProject" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>