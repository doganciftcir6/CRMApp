<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Onicorn - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/thema/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/thema/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body id="page-top">
    <div id="content-wrapper" class="d-flex flex-column">
        <div>
            <!-- Page Wrapper -->
            <div id="wrapper">

                <!-- Sidebar SOL menü -->
                @await Component.InvokeAsync("SidebarComponent")
                <!-- End of Sidebar -->

                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Topbar ÜST taraf -->
                        @await Component.InvokeAsync("TopbarComponent")
                    <!-- End of Topbar -->

                    <!-- Main Content -->
                    <div id="content">
                        @RenderBody()
                    </div>
                    <!-- End of Main Content -->

                    <!-- Footer -->
                        @await Component.InvokeAsync("FooterComponent")
                    <!-- End of Footer -->

                    <!-- End of Content Wrapper -->
                </div>
            </div>
            <!-- End of Page Wrapper -->
        </div>
    </div>

    <!-- Logout Modal-->
        @await Component.InvokeAsync("LogoutModalComponent")

    <!-- Bootstrap core JavaScript-->
    <script src="~/thema/vendor/jquery/jquery.min.js"></script>
    <script src="~/thema/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/thema/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/thema/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/thema/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/thema/js/demo/chart-area-demo.js"></script>
    <script src="~/thema/js/demo/chart-pie-demo.js"></script>
</body>
</html>
