@model CustomerDetailVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div asp-validation-summary="All"></div>
    <div class="col-lg-8 border p-3 main-section bg-white">
        <div class="row hedding m-0 pl-3 pt-0 pb-3 font-weight-bold">
            @Model.CompanyName
        </div>
        <div class="row m-0">
            <div class="col-lg-12">
                <div class="right-side-pro-detail border p-3 m-0">
                    <div class="row">

                        <h5>Customer Detail</h5>

                        <div class="col-lg-12">
                            <strong>Email : </strong>
                            <p class="text d-inline">@Model.Email</p>
                        </div>
                        <div class="col-lg-12">
                            <strong>Phone : </strong>
                            <p class="text d-inline">@Model.Phone</p>
                        </div>
                        <div class="col-lg-12">
                            <strong>InsertTime : </strong>
                            <p class="text d-inline">@Model.InsertTime</p>
                        </div>
                        <div class="col-lg-12">
                            <strong>UpdateTime : </strong>
                            <p class="text d-inline">@if (Model.UpdateTime != null)
                                {
                                    @Model.UpdateTime
                                }</p>
                        </div>
                        <div class="col-lg-12">
                            <strong>Status : </strong>
                            <p class="text d-inline">@Model.Status</p>
                        </div>
                        <div class="col-lg-12">
                            <strong>Province : </strong>
                            <p class="text d-inline">@Model.Province</p>
                        </div>
                        <div class="col-lg-12">
                            <strong>District : </strong>
                            <p class="text d-inline">@Model.District</p>
                        </div>
                        <div class="col-lg-12">
                            <strong>Address : </strong>
                            <p class="text d-inline">@Model.Address</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>