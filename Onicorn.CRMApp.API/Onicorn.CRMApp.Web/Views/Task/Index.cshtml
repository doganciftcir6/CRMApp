@model IEnumerable<TasksVM>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/thema/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Tasks</h6>
        </div>
        <div class="card-body">
            <a asp-controller="Task" asp-action="InsertTask" class="text text-white text-uppercase bg-info mb-1">Create a new task</a>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Taskname</th>
                            <th>AppUser</th>
                            <th>TaskSituation</th>
                            <th>StartDate</th>
                            <th>FinishDate</th>
                            <th>Status</th>
                            <th>#</th>
                            <th>#</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Taskname</td>
                                <td>@item.AppUser</td>
                                <td>@item.TaskSituation</td>
                                <td>@item.StartDate</td>
                                <td>@item.FinishDate</td>
                                <td>@item.Status</td>
                                <td><a asp-controller="Task" asp-action="TaskDetails" asp-route-id="@item.Id" class="btn btn-outline-warning">Detail</a></td>
                                <td><a asp-controller="Task" asp-action="UpdateTask" asp-route-id="@item.Id" class="btn btn-outline-success">Update</a></td>
                                <td><a asp-controller="Task" asp-action="RemoveTask" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Page level plugins -->
<script src="~/thema/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/thema/vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="~/thema/js/demo/datatables-demo.js"></script>